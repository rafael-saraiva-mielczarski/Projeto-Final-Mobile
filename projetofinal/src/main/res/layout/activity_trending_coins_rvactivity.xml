<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.CoinsRVActivity">\

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/coinsRV"
        android:layout_width="417dp"
        android:layout_height="533dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_busca_trending"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/background_button"
        android:text="@string/btn_busca_trending"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/coinsRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/background_button"
        android:text="@string/btn_back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/coinsRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="272dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:text="@string/trendingText"
        app:layout_constraintBottom_toTopOf="@+id/coinsRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="224dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="@string/trendingSubText"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/coinsRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.463" />

</androidx.constraintlayout.widget.ConstraintLayout>